        <spring.mobile.version>1.1.0.M2</spring.mobile.version>
        <spring.data.version>1.0.0.RELEASE</spring.data.version>
        <spring.version>3.2.1.RELEASE</spring.version>
        <spring.js.version>2.1.0.RELEASE</spring.js.version>
        <spring.security.version>3.2.0.M1</spring.security.version>
